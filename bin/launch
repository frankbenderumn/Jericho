#!/bin/bash

PORT=8080
THREADS=20
DIRECTORY=frontend
DATABASE=demodb
SCRIPT=undefined
FLAG=undefined

POSITIONAL_ARGS=()

echo -e "Number of args: $#"
echo -e "Args are: $*"

while [[ $# -gt 0 ]]; do
  case $1 in
    -p|--port)
      PORT="$2"
      shift
      shift
      ;;
    -t|--threads)
      THREADS="$2"
      shift
      shift
      ;;
    -d|--directory)
      DIRECTORY="$2"
      shift
      shift
      ;;
    -s|--script)
      SCRIPT="$2"
      shift
      shift
      ;;
    -f|--file)
      SCRIPT="$2"
      shift
      shift
      ;;
    -db|--database)
      DATABASE="$2"
      shift
      shift
      ;;
    -m|--mode)
      FLAG="$2"
      shift
      shift
      ;;
    -*|--*)
      echo "Unknown option $1"
      exit 1
      ;;
    *)
      POSITIONAL_ARGS+=("$1") # save positional arg
      shift
      ;;
  esac
done

set -- "${POSITIONAL_ARGS[@]}" # restore positional parameters

echo -e "PORT      : ${PORT}"
echo -e "THREADS   : ${THREADS}"
echo -e "DIRECTORY : ${DIRECTORY}"
echo -e "DATABASE  : ${DATABASE}"
echo -e "FLAG      : ${FLAG}"
echo -e "SCRIPT    : ${SCRIPT}"

./cmake-build/server ${PORT} ${THREADS} ${DIRECTORY} ${DATABASE} ${FLAG} ${SCRIPT}